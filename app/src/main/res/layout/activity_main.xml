<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.customcoloring.PictureSurface
        android:id="@+id/Drawing_Surface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/Element_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Snowman" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/Red_Seek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="255" />

            <SeekBar
                android:id="@+id/Green_Seek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="255" />

            <SeekBar
                android:id="@+id/Blue_Seek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="255" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Red_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red" />

            <TextView
                android:id="@+id/Green_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Green" />

            <TextView
                android:id="@+id/Blue_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
